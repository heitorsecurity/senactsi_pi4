<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.wesbalbinolive.julietapp.FinalizadaActivity"
    android:background="#ddd">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="#fff">

        <ImageView
            android:layout_width="167dp"
            android:layout_height="228dp"
            android:id="@+id/imgLogoFinalizado"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo"
            android:contentDescription="logoFinalizado" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/txtMsgCompraFinalizada"
            android:id="@+id/txtMsgCompraFinalizada"
            android:layout_gravity="center_horizontal"
            android:textColor="#000"
            android:paddingBottom="20dp" />

        <Button
            android:layout_width="207dp"
            android:layout_height="wrap_content"
            android:text="@string/btnVoltarCompras"
            android:id="@+id/btnVoltarCompras"
            android:layout_gravity="center_horizontal"
            android:background="#455A64"
            android:textColor="#fff" />
    </LinearLayout>
</LinearLayout>
