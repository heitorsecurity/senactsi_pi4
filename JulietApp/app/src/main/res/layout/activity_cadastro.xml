<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.wesbalbinolive.julietapp.CadastroActivity"
    android:background="#ddd">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/cadastrar_bg"
            android:layout_gravity="right"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:weightSum="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/txtMsgCadastro"
                    android:id="@+id/txtMsgCadastro"
                    android:textColor="#000"
                    android:padding="20sp"
                    android:textSize="18sp" />
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtNomeCadastro"
                android:layout_gravity="center_horizontal"
                android:textColorHint="#9c9c9c"
                android:hint="@string/edtNomeCadastro"
                android:gravity="bottom"
                android:textColor="#000"
                android:layout_weight="0.10"
                android:paddingLeft="15dp"
                android:paddingBottom="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtEmailCadastro"
                android:layout_gravity="center_horizontal"
                android:hint="@string/edtEmailCadastro"
                android:inputType="textEmailAddress"
                android:textColorHint="#9c9c9c"
                android:layout_weight="0.10"
                android:gravity="bottom"
                android:textColor="#000"
                android:paddingBottom="20dp"
                android:paddingLeft="15dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtSenhaCadastro"
                android:hint="@string/edtSenhaCadastro"
                android:layout_gravity="center_horizontal"
                android:inputType="textPassword"
                android:textColorHint="#9c9c9c"
                android:layout_weight="0.10"
                android:gravity="bottom"
                android:textColor="#000"
                android:paddingLeft="15dp"
                android:paddingBottom="20dp" />

            <Button
                android:layout_width="224dp"
                android:layout_height="36dp"
                android:text="@string/btnCadastrar"
                android:id="@+id/btnCadastrar"
                android:layout_gravity="center_horizontal"
                android:background="#2196f3"
                android:textColor="#fff" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
