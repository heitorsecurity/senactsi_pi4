<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#ddd"
    tools:context="com.wesbalbinolive.julietapp.EnderecoActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#fff"
        android:orientation="vertical"
        android:weightSum="1">

        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar">
        </include>

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/endereco_bg"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="EndereÃ§o"
                        android:id="@+id/textView12"
                        android:textColor="#fff"
                        android:textSize="30sp"
                        android:layout_weight="0.36"
                        android:padding="30dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="@string/txtMsgEndereco"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edtCep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/edtCep"
                    android:inputType="number"
                    android:maxLength="9"
                    android:maxLines="1"
                    android:paddingBottom="20dp"
                    android:paddingLeft="15dp"
                    android:textColor="#000"
                    android:textColorHint="#9c9c9c" />

                <EditText
                    android:id="@+id/edtLogradouro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/edtLogradouro"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingBottom="20dp"
                    android:paddingLeft="15dp"
                    android:textColor="#000"
                    android:textColorHint="#9c9c9c"
                    android:maxLength="50" />

                <EditText
                    android:id="@+id/edtNumero"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/edtNumero"
                    android:maxLines="1"
                    android:paddingBottom="20dp"
                    android:paddingLeft="15dp"
                    android:textColor="#000"
                    android:textColorHint="#9c9c9c"
                    android:maxLength="5"
                    android:inputType="number" />

                <Button
                    android:id="@+id/btnConcluir"
                    android:layout_width="187dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_horizontal"
                    android:drawableRight="@drawable/ic_cadastro"
                    android:background="#37474F"
                    android:text="Concluir"
                    android:textColor="#fff" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</LinearLayout>
