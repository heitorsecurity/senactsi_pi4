<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.wesbalbinolive.julietapp.SobreActivity"
    android:background="#ddd">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="#fff"
        android:weightSum="1">

        <ImageView
            android:layout_width="109dp"
            android:layout_height="149dp"
            android:id="@+id/imageView8"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/txtMsgSobre"
            android:id="@+id/txtMsgSobre"
            android:textColor="#000"
            android:paddingLeft="15sp"
            android:paddingTop="15sp"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aplicativo desenvolvido com caráter educacional."
            android:id="@+id/textView"
            android:textColor="#696969"
            android:layout_marginTop="5sp"
            android:layout_gravity="center_horizontal"
            android:paddingTop="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seus desenvolvedores são:"
            android:id="@+id/textView6"
            android:textColor="#696969"
            android:paddingLeft="10sp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cristhian Alves "
            android:id="@+id/textView7"
            android:textColor="#696969"
            android:paddingLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heitor Teixeira"
            android:id="@+id/textView8"
            android:textColor="#696969"
            android:paddingLeft="10dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rafael Carignato"
            android:id="@+id/textView9"
            android:textColor="#696969"
            android:paddingLeft="10dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sidney Sousa"
            android:id="@+id/textView10"
            android:textColor="#696969"
            android:paddingLeft="10dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wesley Balbino"
            android:id="@+id/textView11"
            android:textColor="#696969"
            android:paddingLeft="10dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:text="Estudantes do 4º Semestre do curso de Sistemas para internet do Centro Universitário Senac."
            android:id="@+id/textView12"
            android:textColor="#696969"
            android:padding="10dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</LinearLayout>
